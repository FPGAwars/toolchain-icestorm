CC = x86_64-w64-mingw32-gcc 

LDLIBS = -L ~/.win/libusb/lib -L ~/.win/libftdi/lib -static -lftdi1 -lm -lusb-1.0
CFLAGS = -MD -O0 -Wall -std=c99 -I/usr/local/include -I ~/.win/libftdi/include/libftdi1

all: iceprog.exe

iceprog.exe: iceprog.o
	$(CC) -o $@ $(LDFLAGS) $^ $(LDLIBS)

clean:
	rm -f iceprog
	rm -f iceprog.exe
	rm -f *.o *.d

-include *.d

.PHONY: all clean
